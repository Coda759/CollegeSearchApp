<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileFragment"
    android:background="@drawable/grad_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Profile"
                android:textSize="28sp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif-medium"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Test Scores:"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_bg_oval">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAT Scores"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-medium"
                    android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAT Reading:"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"
                        android:paddingTop="10dp"/>

                <TextView
                    android:id="@+id/my_sat_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAT Math:"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/my_sat_math"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="10dp"/>

            </LinearLayout>

            <!--ACT-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_bg_oval">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT Scores"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-medium"
                    android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACT English:"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/my_act_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36.0"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACT Math:"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/my_act_math"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36.0"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/user_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Sign Out"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/custom_button"/>

    </LinearLayout>



</FrameLayout>